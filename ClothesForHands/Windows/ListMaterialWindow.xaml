<Window x:Class="ClothesForHands.ListMaterialWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClothesForHands"
        mc:Ignorable="d"
        Title="Одежда для ручек" 
        Height="700" 
        Width="1366"
        MinHeight="450"
        MinWidth="800"
        Icon="/ClothesForHands;component/Resourses/iconWin.ico"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Image Source="/ClothesForHands;component/Resourses/Logo.png" 
               Margin="10 0 0 0"
               HorizontalAlignment="Left"/>
        <TextBlock Text="Список материалов"
                   Margin="0 0 0 0"
                   FontSize="30"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" 
                   FontFamily="Candara"/>

        <!-- Строка сортировка и поиск -->

        <WrapPanel Grid.Row="2"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center">
            <TextBox x:Name="txtSearch"
                     Width="200"
                     Height="35"
                     VerticalAlignment="Center"
                     Margin="20 2"
                     VerticalContentAlignment="Center"
                     FontFamily="Candara"
                     FontSize="18"/>

            <ComboBox x:Name="cmbSort"
                     Width="200"
                     Height="35"
                     VerticalAlignment="Center"
                     Margin="20 2"
                     VerticalContentAlignment="Center"
                     FontFamily="Candara"
                     FontSize="18"/>

            <ComboBox x:Name="cmbFiltr"
                     Width="200"
                     Height="35"
                     VerticalAlignment="Center"
                     Margin="20 2"
                     VerticalContentAlignment="Center"
                     FontFamily="Candara"
                     FontSize="18"/>
        </WrapPanel>

        <!-- Список материалов -->

        <ListView x:Name="lvMaterialList"
                  Grid.Row="3">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1"
                            BorderBrush="Black"
                            Width="1200"
                            Height="100"
                            HorizontalAlignment="Center">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0"
                                   Margin="20 0">
                                <Image.Source>
                                    <Binding Path="GetImage">
                                        <Binding.TargetNullValue>
                                            <ImageSource>/ClothesForHands;component/Resourses/picture.png</ImageSource>
                                        </Binding.TargetNullValue>
                                    </Binding>
                                </Image.Source>
                            </Image>

                            <StackPanel Grid.Column="1">
                                <WrapPanel>
                                    <TextBlock Text="Тип материала: "
                               FontFamily="Candara"
                               FontSize="15"
                               Margin="5 3 0 3"/>
                                    <TextBlock Text="{Binding TypeMaterial.Name}"
                               FontFamily="Candara"
                               FontSize="15"
                               Margin="20 3 0 3"/>
                                    <TextBlock Text="|   Наименование материала:"
                               FontFamily="Candara"
                               FontSize="15"
                               Margin="20 3 0 3"/>
                                    <TextBlock Text="{Binding Name}"
                               FontFamily="Candara"
                               FontSize="15"
                               Margin="20 3 0 3"/>
                                </WrapPanel>

                                <WrapPanel>
                                    <TextBlock Text="Минимальное количество"
                               FontFamily="Candara"
                               FontSize="15"
                               Margin="20 3 0 3"/>

                                    <TextBlock Text="{Binding MinCount}"
                               FontFamily="Candara"
                               FontSize="15"
                               Margin="20 3 0 3"/>

                                    <TextBlock Text="шт."
                               FontFamily="Candara"
                               FontSize="15"
                               Margin="20 3 0 3"/>

                                </WrapPanel>

                                <WrapPanel>
                                    <TextBlock Text="Поставщики:"
                               FontFamily="Candara"
                               FontSize="15"
                               Margin="20 3 0 3"
                               FontWeight="Bold"/>
                                    <TextBlock Text="список поставщиков"
                               FontFamily="Candara"
                               FontSize="15"
                               Margin="20 3 0 3"/>
                                </WrapPanel>



                                <TextBlock Text="Постащики"
                               FontFamily="Candara"
                               FontSize="15"
                               Margin="20 3 0 3"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock  
                           Text="Остаток"
                           FontFamily="Candara"
                           FontSize="15"
                           Margin="20 3 0 3"
                           HorizontalAlignment="Center"/>

                                <TextBlock  
                           Text="{Binding Count}"
                           FontFamily="Candara"
                           FontSize="15"
                           Margin="20 3 0 3"
                           HorizontalAlignment="Center"/>

                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <WrapPanel Grid.Row="5" HorizontalAlignment="Right" VerticalAlignment="Center">
            <Button x:Name="btnBack" 
                    Content="Назад"
                    FontSize="15"
                    Margin="5"
                    Background="#FFFFFF"
                    BorderThickness="0"
                    Click="btnBack_Click"/>

            <Button x:Name="btnGo1"
                    Content="1"
                    FontSize="15"
                    Margin="5"
                    Background="#A5E887"
                    BorderThickness="0"/>

            <Button x:Name="btnGo2"
                    Content="2"
                    FontSize="15"
                    Margin="5"
                    Background="#FFFFFF"
                    BorderThickness="0"/>

            <Button x:Name="btnGo3"
                    Content="3"
                    FontSize="15"
                    Margin="5"
                    Background="#FFFFFF"
                    BorderThickness="0"
                    />

            <Button x:Name="btnNext"
                    Content="Вперед"
                    FontSize="15"
                    Margin="5"
                    Background="#FFFFFF"
                    BorderThickness="0"
                    Click="btnNext_Click"/>
        </WrapPanel>
    </Grid>
</Window>
